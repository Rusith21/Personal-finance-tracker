<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myfrist">

    <!-- ðŸ”” Required for Android 13+ notifications -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- ðŸ“ File permissions for CSV/PDF export (Android 9 and below) -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Myfrist">

        <!-- ðŸ‘¤ Login Screen (Launcher) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ðŸ“ Register Screen -->
        <activity android:name=".RegisterActivity" />

        <!-- ðŸ  Main App Screen -->
        <activity android:name=".MainActivity" />

        <!-- ðŸ’° Budget Screen -->
        <activity android:name=".SetBudgetActivity" />

    </application>

</manifest>
